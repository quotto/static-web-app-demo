{
    "auth": {
        "identityProviders": {
        "azureActiveDirectory": {
            "registration": {
            "openIdIssuer": "https://login.microsoftonline.com/2645937b-9927-42eb-9f57-4ae85c89baa3/v2.0",
            "clientIdSettingName": "AZURE_CLIENT_ID",
            "clientSecretSettingName": "AZURE_CLIENT_SECRET"
            }
        }
        }
    },
    "trailingSlash": "auto",
    "routes":[
        {
            "route": "/logout",
            "redirect": "/.auth/logout"
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad"
        },
        {
            "route": "/.auth/login/aad/callback",
            "redirect": "/"
        },
        {
            "route": "/index.html",
            "allowedRoles": ["authenticated"]
        }
    ],
    "responseOverrides": {
        "401": {
        "statusCode": 302,
        "redirect": "/login"
        }
    }
}